{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "types": [
      "chai",
      "mocha",
      "node"
    ],
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "include": ["./src/**/*", "./ambient.d.ts"],
  "exclude": [
    "**/*.spec.ts",
    "dist",
    "node_modules"
  ]
}
